{% extends "main.jinja" %}

{% block title %}
  Details for Host {{ host.shortname }}
{% endblock %}

{% block content %}
  <h2>{{ host.shortname }}</h2>
  <h4>{{ host.os }}</h4>

  <hr />

  {# <img src="/graph/sysload/{{ host.host_id }}"
  class="rounded mx-auto d-block" /> #}
  <figure>
    <embed type="image/svg+xml" src="/graph/sysload/{{ host.host_id }}" />
  </figure>

  <hr />

  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Time</th>
        <th>Source</th>
        <th>Data</th>
      </tr>
    </thead>

    <tbody>
      {% for row in data %}
        <tr>
          <td>{{ row.record_id }}</td>
          <td>{{ row.timestamp.strftime(time_fmt) }}</td>{# Ob das das geht? ðŸ«£ #}
          <td>{{ row.source() }}</td>
          <td>{{ row.payload() }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}


