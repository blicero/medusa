{# -*- mode: jinja2; coding: utf-8; -*- #}
<!DOCTYPE html>
<html>
  <head>
    <!-- Time-stamp: "2025-05-06 19:06:25 krylon" -->
    <title>{% block title %}{% endblock %}</title>

    <meta charset="utf-8" />
    <link rel="stylesheet" href="/static/bootstrap.min.css" />
    <link rel="stylesheet" href="/static/bootstrap-reboot.min.css" />
    <link rel="stylesheet" href="/static/bootstrap-utilities.min.css" />

    <link rel="stylesheet" href="/static/style.css" />

    <script src="/static/jquery-3.7.1.min.js"></script>
    <script src="/static/bootstrap.bundle.min.js"></script>
    <script src="/static/underscore.js"></script>
    <script src="/static/interact.js"></script>
    <script src="/static/settings.js"></script>
    <script>
     $(document).ready(() => {
       initSettings()
       beaconLoop()
     })
    </script>
  </head>

  <body>
    <div class="intro">
      {% block intro %}
      {% include "intro.jinja" %}
      {% endblock %}
    </div>

    <div class="menu">
      {% block menu %}
      {% include "menu.jinja" %}
      {% endblock %}
    </div>

    <div class="content">
      {% block content %}
      <h3>Hosts</h3>
      <table class="table table-light table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>OS</th>
            <th>Last Contact</th>
          </tr>
        </thead>

        <tbody>
          {% for host in hosts %}
            <tr>
              <td>{{ host.host_id }}</td>
              <td>{{ host.name }}</td>
              <td>{{ host.os }}</td>
              <td>{{ host.contact_str }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
      {% endblock %}
    </div>

    {% block footer %}
    <hr />
    <div class="footer">
      &copy; 2025{%- if year > 2025 %} - {{ year }}{% endif %}
      Benjamin Walkenhorst
    </div>
    {% endblock %}
  </body>
</html>
